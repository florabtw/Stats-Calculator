<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="home_screen_button">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="keypad_button">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">?attr/textViewTextColor</item>
    </style>

    <style name="keypad_button_default" parent="keypad_button">
        <item name="android:background">?attr/defaultOutlinedSelector</item>
        <item name="android:onClick">keypadPress</item>
    </style>

    <style name="keypad_button_backspace" parent="keypad_button">
        <item name="android:background">?attr/redOutlinedSelector</item>
        <item name="android:longClickable">true</item>
        <item name="android:onClick">backSpace</item>
    </style>

    <style name="keypad_button_multiplier" parent="keypad_button">
        <item name="android:background">?attr/brownOutlinedSelector</item>
        <item name="android:onClick">keypadPress</item>
    </style>

    <style name="keypad_button_comma" parent="keypad_button">
        <item name="android:background">?attr/blueOutlinedSelector</item>
        <item name="android:onClick">keypadPress</item>
    </style>

    <style name="keypad_button_done" parent="keypad_button">
        <item name="android:background">?attr/greenOutlinedSelector</item>
        <item name="android:onClick">donePress</item>
    </style>

    <style name="list_item">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="basic_centered">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="basic_centered_textview" parent="basic_centered">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="results_textview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/textViewTextColor</item>
    </style>

    <style name="default_style">
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">?attr/defaultOutlinedDrawable</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="pc_style" parent="default_style">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="pc_textview" parent="pc_style">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">2</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:textColor">?attr/textViewTextColor</item>
    </style>

    <style name="basic_edittext" parent="default_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textColor">?attr/editTextColor</item>
        <item name="android:maxLines">4</item>
    </style>

    <style name="pc_edittext" parent="pc_style">
        <item name="android:inputType">number</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textColor">?attr/editTextColor</item>
    </style>

    <style name="listview">
        <item name="android:background">?attr/defaultOutlinedDrawable</item>
        <item name="android:padding">1dp</item>
        <item name="android:overScrollMode" tools:ignore="NewApi">never</item>
        <item name="android:fadingEdgeLength">0dp</item>
    </style>

</resources>