<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="HomeTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/fifa</item>
        <item name="blueOutlinedDrawable">@drawable/blue_border_selector</item>
        <item name="greenOutlinedDrawable">@drawable/green_border_selector</item>
    </style>

    <style name="NotHomeTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/white_texture</item>
        <item name="defaultOutlinedDrawable">@drawable/black_border</item>
        <item name="resultsTextViewTextColor">@android:color/black</item>
        <item name="editTextColor">@android:color/black</item>
        <item name="defaultOutlinedSelector">@drawable/black_border_selector</item>
    </style>

</resources>